# =============================================================================
# API PROVIDER CONFIGURATION
# =============================================================================
# Choose your provider: "openai", "gemini", or "offline"
# For AI-powered insertion planning, use "gemini" or "openai"
API_PROVIDER=gemini

# Transcription provider (for A-roll speech-to-text)
TRANSCRIPTION_PROVIDER=offline

# =============================================================================
# OPTION 1: OPENAI (Paid - Best Quality)
# =============================================================================
# OPENAI_API_KEY=sk-proj-...
# VISION_MODEL=gpt-4o
# EMBEDDING_MODEL=text-embedding-3-large

# =============================================================================
# OPTION 2: GEMINI (FREE - Good Quality)
# =============================================================================
# GEMINI_API_KEY=AIza...
# VISION_MODEL=gemini-2.0-flash-exp
# EMBEDDING_MODEL=text-embedding-004

# =============================================================================
# OPTION 3: OFFLINE MODE (No API Keys - Local HuggingFace Models)
# =============================================================================
# Vision model for B-roll captioning: "blip", "git", or "moondream"
OFFLINE_VISION_MODEL=blip

# Embedding model for semantic matching
OFFLINE_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Whisper model for transcription: "tiny", "base", "small", "medium", "large"
# Set to empty string to skip offline transcription (use visual fallback)
OFFLINE_WHISPER_MODEL=base

# =============================================================================
# MATCHING ALGORITHM SETTINGS
# =============================================================================
# Minimum cosine similarity to consider a B-roll match
SIMILARITY_THRESHOLD=0.65

# Minimum gap between insertions (seconds)
MIN_GAP_SECONDS=8.0

# Maximum number of B-roll insertions allowed
MAX_INSERTIONS=6

# =============================================================================
# ADVANCED SETTINGS (Optional)
# =============================================================================
# Enable debug logging
# DEBUG=true

# Max video duration to process (seconds)
# MAX_VIDEO_DURATION=600

# Number of frames to extract from each B-roll for captioning (offline mode)
# OFFLINE_FRAMES_PER_VIDEO=3
# =============================================================================
# SMART B-ROLL INSERTER - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your API keys

# =============================================================================
# API PROVIDER SELECTION
# =============================================================================
# Choose which provider to use: "openai" or "gemini"
API_PROVIDER=gemini

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Models
OPENAI_VISION_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_WHISPER_MODEL=whisper-1

# =============================================================================
# GOOGLE GEMINI CONFIGURATION
# =============================================================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=AIzaSyBc.....

# Gemini Models
# Try: gemini-2.0-flash, gemini-2.5-flash, gemini-2.0-flash-lite
GEMINI_VISION_MODEL=gemini-2.0-flash
GEMINI_EMBEDDING_MODEL=models/text-embedding-004

# =============================================================================
# TRANSCRIPTION SETTINGS
# =============================================================================
# Which provider to use for transcription: "openai" (Whisper) or "gemini"
# Note: OpenAI Whisper requires ffmpeg installed. Use "gemini" if no ffmpeg.
TRANSCRIPTION_PROVIDER=gemini

# =============================================================================
# MATCHING SETTINGS
# =============================================================================
SIMILARITY_THRESHOLD=0.65
MIN_GAP_SECONDS=8.0
MAX_INSERTIONS=6
MIN_INSERTIONS=3
BROLL_MIN_DURATION=2.0
BROLL_MAX_DURATION=4.0
